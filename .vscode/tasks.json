{
    // See https://go.microsoft.com/fwlink/?LinkId=733558 
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cpp.exe build active file",
            "command": "C:\\MinGW\\bin\\cpp.exe",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I",
                "${workspaceFolder}\\libraries\\Control",
                "-I",
                "${workspaceFolder}\\libraries\\Figure",
                "-I",
                "${workspaceFolder}\\libraries\\Geometry",
                "-I",
                "${workspaceFolder}\\libraries\\Information",
                "-I",
                "${workspaceFolder}\\libraries\\Robot",
                "-I",
                "${workspaceFolder}\\libraries\\Strategy",
                "-I",
                "${workspaceFolder}\\libraries\\Game",
            ],
            "options": {
                "cwd": "C:\\MinGW\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}